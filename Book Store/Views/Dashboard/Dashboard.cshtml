    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
@model VmBook
@section Body{
    <header class="masthead" id="BookStore">
        <div class="container">
            <div class="masthead-subheading">Welcome To Library System!</div>
            <div class="masthead-heading text-uppercase">Think before you speak.<br> Read before you think</div>
            <a class="btn btn-primary btn-xl text-uppercase" href="#Category">GET STARTED</a>
        </div>
    </header>
    <section class="page-section" id="Category">
        <div class="container">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">Category</h2>
            </div>
            <div class="row text-center">
                 @foreach (Category item in Model.licategory)
                {
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fas fa-circle fa-stack-2x text-primary"></i>
                        <img src="~/Images/iconbook.png" class="fa-stack-1x fa-inverse">
                        <!-- <i class="fas fa-shopping-cart fa-stack-1x fa-inverse"></i> -->
                    </span>
                    <h4 class="my-3">@item.Name</h4>
                    <p class="text-muted">
                        @item.Description
                    </p>
                </div>
                }
            </div>
        </div>
    </section>
    <!-- Portfolio Grid-->
